<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linlaHeaderProgress"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="visible">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:id="@+id/status_actividad_progress"
                android:indeterminate="false"
                android:progress="0"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/red_progress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </ProgressBar>
            <TextView
                android:id="@+id/actividad_progress_label"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NINGUNA ACTIVIDAD PENDIENTE"
                android:textColor="#40000000"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:layout_alignLeft="@+id/status_actividad_progress"
                android:layout_alignTop="@+id/status_actividad_progress"
                android:layout_alignRight="@+id/status_actividad_progress"
                android:layout_alignBottom="@+id/status_actividad_progress"
                />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>