<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <!--ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logotipo_retiro"
        android:gravity="center"
        android:background="#33b5e5"
        android:layout_below="@id/imageView"
        android:layout_gravity="center" /-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/tuerca_5"
            android:layout_margin="8dp"
            />

    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:text="Nueva Tarea"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="22dip"

        android:fontFamily="sand-serif">
    </TextView>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_blue_light"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:nestedScrollingEnabled="true"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/tableRow"
            android:layout_alignLeft="@+id/tableRow"
            android:layout_alignStart="@+id/tableRow"
            android:id="@+id/tableRow2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#003076"
                android:textSize="18dp"
                android:text="Número de servicio:"
                android:layout_marginTop="8dp"
                android:id="@+id/textView3" />

            <test3.ncxchile.cl.widgets.RequiredEditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tarea_num_os"
                android:layout_weight="0.51"
                android:maxLength="40"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginLeft="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:nestedScrollingEnabled="true"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/tableRow4"
            android:layout_alignLeft="@+id/tableRow4"
            android:id="@+id/tableRow5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#003076"
                android:textSize="18dp"
                android:text="Tipo vehículo:"
                android:layout_marginTop="8dp"
                android:id="@+id/textView5" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tipo_vehiculo"
                android:layout_weight="0.51"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginLeft="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:nestedScrollingEnabled="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tableRow2"
            android:layout_alignLeft="@+id/tableRow2"
            android:layout_alignStart="@+id/tableRow2"
            android:id="@+id/tableRow3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comuna:"
                android:layout_marginTop="8dp"
                android:textColor="#003076"
                android:textSize="18dp"
                android:id="@+id/text_comunas" />

            <test3.ncxchile.cl.widgets.CustomAutoComplete
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comunas_dialog"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:maxLength="40"
                android:layout_marginLeft="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:nestedScrollingEnabled="true"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:paddingRight="10dp"
            android:id="@+id/tableRow7"
            android:layout_below="@+id/tableRow5"
            android:layout_alignLeft="@+id/tableRow5"
            android:layout_alignStart="@+id/tableRow5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección:"
                android:layout_marginTop="8dp"
                android:textColor="#003076"
                android:textSize="18dp"
                android:id="@+id/textView7" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/direccion"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:maxLength="70"
                android:layout_marginLeft="15dp" />
        </TableRow>
        <TableRow android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:measureWithLargestChild="true"
                android:orientation="horizontal"
                android:paddingTop="0dip"
                android:layout_marginBottom="0dip"
                >

                <Button
                    android:background="@drawable/my_button_border"
                    android:id="@+id/btn_tarea_no"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Cancelar"
                    android:textSize="13dp"
                    />
                <Button
                    android:background="@drawable/my_button_border"
                    android:id="@+id/btn_tarea_yes"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text= "Aceptar"
                    android:textSize="13dp"
                    />
            </LinearLayout>
        </TableRow>
    </LinearLayout>

</LinearLayout>
