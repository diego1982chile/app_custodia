<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/headhead"
        android:layout_gravity="left|top"
        android:id="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:src="@drawable/logotipo_infogrua"
        android:gravity="center"
        android:background="#33b5e5"
        android:layout_gravity="center" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/imageView1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true">

        <!--TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="18dp"
            android:textColor="#FF0000"
            android:layout_gravity="center_horizontal"
            android:id="@+id/errores7" /-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#D8D8D8">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:src="@drawable/info_grua_03"
                android:gravity="left"
                android:layout_gravity="left" />
        </LinearLayout>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/autoridad_solicita"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:showDividers="middle"
            android:nestedScrollingEnabled="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/tableRow"
            android:baselineAligned="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_grua"
                android:textColor="#003076"
                android:textSize="18dp"
                android:layout_marginTop="8dp"
                android:id="@+id/textView" />


            <test3.ncxchile.cl.widgets.RequiredEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view7_01_infogrua"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_weight="0.51"
                android:layout_marginLeft="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/autoridad_solicita"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:showDividers="middle"
            android:nestedScrollingEnabled="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/tableRow2"
            android:baselineAligned="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_grua"
                android:textColor="#003076"
                android:textSize="18dp"
                android:layout_marginTop="8dp"
                android:id="@+id/textView2" />


            <test3.ncxchile.cl.widgets.RequiredEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view7_02_nombreop"
                android:singleLine="true"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                android:layout_weight="0.51"
                android:layout_marginLeft="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/autoridad_solicita"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:showDividers="middle"
            android:nestedScrollingEnabled="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/tableRow3"
            android:baselineAligned="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rut_grua"
                android:textColor="#003076"
                android:textSize="18dp"
                android:layout_marginTop="8dp"
                android:id="@+id/textView3" />


            <test3.ncxchile.cl.widgets.RutEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view7_03_rut"
                android:layout_weight="0.51"
                android:singleLine="true"
                android:maxLength="9"
                android:imeOptions="actionNext"
                android:hint="Ingresar rut sin puntos ni guiones"
                android:layout_marginLeft="15dp" />
        </TableRow>

    </LinearLayout>

    </ScrollView>
</RelativeLayout>

