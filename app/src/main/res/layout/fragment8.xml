<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/headhead"
        android:layout_gravity="left|top"
        android:id="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:src="@drawable/logotipo_especies"
        android:gravity="center"
        android:background="#33b5e5"
        android:layout_gravity="center" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/imageView1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editText1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#D8D8D8">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/info_catastrofe_03"
                    android:gravity="left"
                    android:layout_gravity="left" />
            </LinearLayout>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/autoridad_solicita"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:showDividers="middle"
                android:nestedScrollingEnabled="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/tableRow"
                android:baselineAligned="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h2_especies"
                    android:textColor="#003076"
                    android:textSize="18dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/textView" />


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view8_01"
                    android:layout_weight="0.51"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:layout_marginLeft="15dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/autoridad_solicita"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:showDividers="middle"
                android:nestedScrollingEnabled="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/tableRow2"
                android:baselineAligned="true">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar"
                    android:textColor="#fff"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:background="#33b5e5"
                    android:id="@+id/add"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:text="Eliminar"
                    android:textColor="#fff"
                    android:layout_marginRight="10dp"
                    android:background="#33b5e5"
                    android:id="@+id/delete"
                    android:layout_alignTop="@+id/button"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </TableRow>

            <LinearLayout
                android:id="@+id/especies"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:paddingLeft="140dp"
                android:paddingRight="40dp"
                android:layout_marginTop="40dp"></LinearLayout>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>

