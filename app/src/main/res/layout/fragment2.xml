<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/headhead"
        android:layout_gravity="left|top"
        android:id="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logotipo_retiro"
        android:gravity="center"
        android:background="#33b5e5"
        android:layout_below="@id/imageView"
        android:layout_gravity="center" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="30dp"
        android:paddingBottom="70dp"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/autoridad_solicita"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:showDividers="middle"
            android:nestedScrollingEnabled="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/tableConsulta">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipo_motivo"
                android:textColor="#003076"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tipo_motivo" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FiscalÃ­a"
                    android:layout_marginLeft="90dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/radioButton2" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="40dp"
                    android:text="RTE Normal"
                    android:id="@+id/radioButton1"
                    android:layout_marginTop="-30dp"
                    android:layout_weight="0.19" />

            </RadioGroup>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/autoridad_solicita"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:showDividers="middle"
            android:nestedScrollingEnabled="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tableRow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/motivo_ret"
                android:textColor="#003076"
                android:textSize="18dp"
                android:layout_marginTop="8dp"
                android:id="@+id/textView" />

            <LinearLayout android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px" >
                <requestFocus />
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/motivos">
                <test3.ncxchile.cl.widgets.CustomAutoComplete
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/motivos1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:hint="Buscar motivo..."
                    />
                <fragment
                    android:name="test3.ncxchile.cl.widgets.FragmentButton"
                    android:tag="motivos"
                    android:id="@+id/fragment_button2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:id="@+id/motivos_fiscalia">
                <test3.ncxchile.cl.widgets.CustomAutoComplete
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/motivos2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:hint="Buscar motivo..."
                    />
                <fragment
                    android:name="test3.ncxchile.cl.widgets.FragmentButton"
                    android:tag="motivos_fiscalia"
                    android:id="@+id/fragment_button2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:nestedScrollingEnabled="true"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/tableRow"
            android:layout_alignLeft="@+id/tableRow"
            android:layout_alignStart="@+id/tableRow"
            android:id="@+id/tableRow2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#003076"
                android:textSize="18dp"
                android:text="@string/avenidaocalle_ret"
                android:layout_marginTop="8dp"
                android:id="@+id/textView3" />

            <test3.ncxchile.cl.widgets.RequiredEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view2_02_avocalle"
                android:layout_weight="0.51"
                android:inputType="textCapWords"
                android:maxLength="40"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginLeft="15dp"
                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:nestedScrollingEnabled="true"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/tableRow4"
            android:layout_alignLeft="@+id/tableRow4"
            android:id="@+id/tableRow5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#003076"
                android:textSize="18dp"
                android:text="@string/numeracion_ret"
                android:layout_marginTop="8dp"
                android:id="@+id/textView5" />

            <test3.ncxchile.cl.widgets.RequiredEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view2_03_numeracion"
                android:layout_weight="0.51"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginLeft="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:nestedScrollingEnabled="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tableRow2"
            android:layout_alignLeft="@+id/tableRow2"
            android:layout_alignStart="@+id/tableRow2"
            android:id="@+id/tableRow3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entrecalles_ret"
                android:textColor="#003076"
                android:inputType="textCapWords"
                android:textSize="18dp"
                android:layout_marginTop="8dp"
                android:id="@+id/textView4" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view2_04_entrecalles"
                android:layout_weight="0.51"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:maxLength="40"
                android:layout_marginLeft="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:nestedScrollingEnabled="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tableRow3"
            android:layout_alignLeft="@+id/tableRow3"
            android:layout_alignStart="@+id/tableRow3"
            android:id="@+id/tableRow4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comuna_ret"
                android:layout_marginTop="8dp"
                android:textColor="#003076"
                android:textSize="18dp"
                android:id="@+id/textView6" />

            <test3.ncxchile.cl.widgets.CustomAutoComplete
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Buscar comuna..."
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.51"
                android:textSize="18dp"
                android:id="@+id/comunas" />
            <fragment
                android:name="test3.ncxchile.cl.widgets.FragmentButton"
                android:tag="comunas"
                android:id="@+id/fragment_button2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:nestedScrollingEnabled="true"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:paddingRight="10dp"
            android:id="@+id/tableRow7"
            android:layout_below="@+id/tableRow5"
            android:layout_alignLeft="@+id/tableRow5"
            android:layout_alignStart="@+id/tableRow5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ref_ret"
                android:layout_marginTop="8dp"
                android:textColor="#003076"
                android:textSize="18dp"
                android:id="@+id/textView7" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view2_06_ref"
                android:layout_weight="0.51"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLength="70"
                android:layout_marginLeft="15dp" />
        </TableRow>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
