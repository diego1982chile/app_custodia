<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/historial_acciones"
    android:visibility="gone">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="top"
        android:id="@+id/acciones">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Ultima Actividad"
            android:gravity="center"
            android:layout_width="0dip"
            android:layout_weight=".3"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:background="#9999"
            android:textColor="#fff"
            android:id="@+id/hist_ult_actividad_text"
            >
        </TextView>
        <TextView
            android:text="OS"
            android:singleLine="false"
            android:gravity="center"
            android:layout_width="0dip"
            android:layout_weight=".2"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:id="@+id/hist_num_os_text"
            android:background="#9999"
            android:textColor="#fff"
            android:autoText="true">
        </TextView>
        <TextView
            android:text="Hora"
            android:singleLine="false"
            android:gravity="center"
            android:layout_width="0dip"
            android:layout_weight=".3"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:id="@+id/hist_hora_text"
            android:background="#9999"
            android:textColor="#fff"
            android:autoText="true">
        </TextView>
        <TextView
            android:text="Hora"
            android:singleLine="false"
            android:gravity="center"
            android:layout_width="0dip"
            android:layout_weight=".2"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:id="@+id/hist_status_text"
            android:background="#9999"
            android:textColor="#fff"
            android:autoText="true">
        </TextView>
    </TableRow>
    </TableLayout>
</FrameLayout>