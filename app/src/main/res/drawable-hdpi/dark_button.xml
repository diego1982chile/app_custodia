<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@android:color/holo_blue_dark" />
            <stroke
                android:width="1dp"
                android:color="#ff201e20" />
            <!--corners
                android:radius="6dp" /-->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ff3f3e40"
                android:endColor="#ff232223"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff000000" />
            <!--corners
                android:radius="6dp" /-->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>